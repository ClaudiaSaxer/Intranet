@model Intranet.Labor.ViewModel.LaborCreatorViewModel

@{
    ViewBag.Title = "Intigena Intranet - Labor Module";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <div class="container">
        <h1>Testresultate Höschenwindeln - @Model.FaNr </h1>
        <div class="row">


            <div class="col-xs-12 col-sm-6 col-lg-3">
                <p>Produkt: @Model.ProductName</p>

            </div>
            <div class="col-xs-12 col-sm-6 col-lg-3">
                <p>Grösse: @Model.SizeName</p>

            </div>
            <div class="col-xs-12 col-sm-6 col-lg-3">
                <p>Datum: @Model.CreatedDate</p>

            </div>
            <div class="col-xs-12 col-sm-6 col-lg-3">
                <p>Schicht: @Model.Shift</p>

            </div>
        </div>
    </div>


</div>


<div class="body-content">

    <button type="button" class="btn btn-danger btn-lg">
        <span class="glyphicon glyphicon glyphicon-plus" aria-hidden="true"></span> Rewet
    </button>

    <button type="button" class="btn btn-danger btn-lg">
        <span class="glyphicon glyphicon glyphicon-plus" aria-hidden="true"></span> Retention
    </button>

</div>

<div class="body-content">
    <h2>Revet</h2>
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>Prod Code</th>
            <th>Gewicht trocken</th>
            <th>nach 140 ml</th>
            <th>nach 210 ml</th>
            <th>RW</th>
            <th>Stricke Trough</th>
            <th>Verteilung</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <th>yy</th>
            <th>yy</th>
            <th>yy</th>
            <th>yy</th>
            <th>yy </th>
            <th>yy</th>
            <th>yy</th>

        </tr>
        </tfoot>
        <tbody>
        @foreach ( var item in Model.Rewet )
        {
            <tr>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>
            </tr>
        }

        </tbody>
    </table>
</div>

<div class="body-content">
    <h2>Penetrationszeit</h2>
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>Prod Code</th>
            <th>Gewicht trocken</th>
            <th>Zugabe 1</th>
            <th>Zugabe 2</th>
            <th>Zugabe 3</th>
            <th>Zugabe 4</th>
        </tr>
        </thead>
        <tbody>
        @foreach ( var item in Model.PenetrationTime )
        {
            <tr>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>

            </tr>
        }
        </tbody>
    </table>
</div>

<div class="body-content">
    <h2>Retention</h2>
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>Prod Code</th>
            <th>Gewicht trocken</th>
            <th>Gewicht nass</th>
            <th>Nach Zentrifuge (g)</th>
            <th>Nach Zentrifuge (%)</th>
            <th>RW</th>
            <th>SAP Typ</th>
            <th>SAP Nr.</th>
            <th>g/Höwi</th>
        </tr>
        </thead>
        <tbody>
        @foreach ( var item in Model.Retention )
        {
            <tr>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>
                <td>yy</td>
            </tr>
        }
        </tbody>
    </table>
</div>